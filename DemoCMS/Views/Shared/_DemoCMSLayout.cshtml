@using DemoCMS.Logic
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DemoCMS</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Plugins/ionicons-2.0.1/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Plugins/dist/css/adminlte.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/Plugins/tinymce/tinymce.min.js"></script>
    <script src="~/Plugins/tinymce/tinymce.init.js"></script>
    @*<script src="https://cdn.ckeditor.com/ckeditor5/32.0.0/classic/ckeditor.js"></script>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.ckeditor.com/4.10.1/standard/ckeditor.js"></script>
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtareaContent', {
                height: 400,
                /*filebrowserUploadUrl: '/NewsCkEditor/img',*/
                filebrowserUploadUrl: '/img'
            });
        });
    </script>
    @RenderSection("style", required: false)
</head>
<body class="hold-transition sidebar-mini @Constants.SideBarType layout-fixed layout-navbar-fixed layout-footer-fixed">


    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav" style="margin-left: -25px;">
                <li id="menu-item" class="nav-item">
                    <a asp-area="" asp-controller="" asp-action="" class="nav-link" data-widget="pushmenu" role="button"><i id="menu-icon" class="fas fa-angle-double-@(string.IsNullOrWhiteSpace(Constants.SideBarType) ? "left" : "right")" style="font-size:24px;"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="" asp-controller="" asp-action="" class="nav-link"><i class="fas fa-home"></i></a>
                </li>
            </ul>


        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-link">
                <img src="~/img/msa-logo.png" alt="CRM Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">DemoCMS</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/img/msa-logo.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a asp-area="" asp-controller="" asp-action="" class="d-block">Nguyen Van A</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item menu-is-opening menu-open">
                            <a asp-area="" asp-controller="" asp-action="" class="nav-link ">
                                <i class="fas fa-users-cog nav-icon"></i>
                                <p>
                                    Admin
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="" asp-action="Index"
                                       class="nav-link">
                                        <i class="far fa-id-badge nav-icon"></i>
                                        <p>UpdateProfile</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item menu-is-opening menu-open">
                            <a asp-area="" asp-controller="" asp-action="" class="nav-link ">
                                <i class="fas fa-cog nav-icon"></i>
                                <p>
                                    Setup
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="" asp-action=""
                                       class="nav-link">
                                        <i class="far fa-folder-open nav-icon"></i>
                                        <p>NewsType</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="" asp-action=""
                                       class="nav-link">
                                        <i class="far fa-folder nav-icon"></i>
                                        <p>NewsCat</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="News" asp-action="Index"
                                       class="nav-link">
                                        <i class="far fa-newspaper nav-icon"></i>
                                        <p>News</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-12">

                            <h1 class="m-0 text-center">@ViewBag.PageTitle</h1>

                        </div><!-- /.col -->

                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    <div class="card">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <!-- /.content -->
        </div>
    </div>

    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
    <!-- Main Footer -->
    <footer class="main-footer">
        <strong>Copyright &copy; 2021 <a href="https://ms-apptech.com">MSA</a>.</strong>
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block">
            <b>Version</b> 1.0.0-rc
        </div>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Plugins/dist/js/adminlte.min.js"></script>
    <script src="~/Plugins/chart/Chart.min.js"></script>
    @*<script src="~/Plugins/tinymce/tinymce.min.js"></script>*@
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>